<% if messages.present? %>
<table class="table table-hover">
  <tbody>
    <% messages.each do |m| %>
      <tr>
        <td style="width: 15%">
          <%= link_to user_path(m.user.id) do %>
            <%= image_tag m.user.get_profile_image(50,50) %>
            <%= m.user.name %>
          <% end %>
        </td>
        <td class="align-middle" style="width: 70%">
          <%= m.message %>
        </td>
        <td class="align-middle text-right" style="width: 15%">
          <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>