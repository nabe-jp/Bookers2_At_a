<% if current_user.following?(user) %>
  <%= link_to "フォロー外す", user_relationships_path(user.id, param: type), class: 'btn btn-default bg-info', method: :delete, remote: true, data: {"turbolinks" => false} %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id, param: type), class: 'btn btn-default bg-success', method: :post, remote: true, data: {"turbolinks" => false} %>
<% end %>