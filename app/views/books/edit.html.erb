<h1>Editing Book</h1>

<% if flash[:alert] %>
  <div>
    <%= @book.errors.count %> errors prohibited this obj from being saved:
  </div>
  <% flash.each do |message_type, message| %>
    <div><%= sanitize alert, tags: %w(br) %></div>
  <% end %>
<% end %>

<%= form_with model: @book do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Opinion</p>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>

  <p><%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %></p>
<% end %>