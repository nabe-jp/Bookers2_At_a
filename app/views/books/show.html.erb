<div class="container"> 
  <div class="row"> 
    <div class="col-md-3">
      <%= render 'users/user_info', user: @user %>
      <%= render 'users/user_edit', book: @book %>
    </div>
    <!-- 本の詳細 -->
    <div class="col-md-8  offset-md-1">
    <h3>Books detail</h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th colspan="5"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= link_to user_path(@book_show.id) do %>
            <%= image_tag 'no_image.jpg' %>
          <% end %>
          <td><%= link_to book_path(@book_show.id) do %>
             <%= @book_show.title %>
          <% end %>
          <td><p><%= @book_show.body %></p>
          <td><% if @book_show.user_id == current_user.id %>
            <a class="btn bg-info text-white"
              <%= link_to edit_book_path(@book_show) do %>Edit
            <% end %></a>
            <a class="btn bg-info text-white" data-method="delete" data-confirm="Are you sure?"
              <%= link_to book_path(@book_show) do %>Destroy
            <% end %></a>
        <% end %><td>
      </tr>
    </table>
    <td><%= link_to user_path(@book_show.user) do %>
      <%= @book_show.user.name %>
    <% end %>
  </div>
</div>