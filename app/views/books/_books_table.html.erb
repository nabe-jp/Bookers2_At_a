<!-- 本の投稿一覧 -->
<h3>Books</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th style="width: 20%"></th>
      <th style="width: 30%">Title</th>
      <th style="width: 50%">Opinion</th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><a><%= image_tag 'no_image.jpg' %></a> 
      <td><%= link_to book_path(book) do %>
        <%= book.title %>
        <%= book.user_id %>
      <% end %>
      <td><p><%= book.body %></p>
    </tr>
  <% end %>
</table>
