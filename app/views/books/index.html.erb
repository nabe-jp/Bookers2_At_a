<div class="container"> 
  <div class="row"> 
    <div class="col-lg-4">
      <h3>User info</h3>
      <!-- ユーザーの詳細 -->
      <%= image_tag @user.get_profile_image(100,100) %>
      <h5>name  <%= @user.name %></h5>
      <h5>introduction  <%= @user.introduction %></h5>
      <% if @user == current_user %>
        <a class="btn btn-outline-secondary"  style= "width: 50%;"<%= link_to edit_user_path(@user) do %>
          <i class="fa-solid fa-user-gear"></i></a>
        <% end %>
      <% end %>

      <!-- 新規投稿作成 -->
      <h3>New book</h3>

      <%= render 'layouts/message', resece: @book %>

      <%= form_with model: @book do |f| %>
        <h5>Title</h5>
        <%= f.text_field :title %>
        <h5>Opinion</h5>
        <%= f.text_area :body %>
        <div>
          <%= f.submit 'Create Book', class: "btn bg-success text-white" %>
        </div>
      <% end %>
    </div>

    <!-- 本の投稿一覧 -->
    <div class="col-lg-8">
      <h3>Books本の投稿一覧 </h3>
      <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
              <td><a><%= image_tag 'no_image.jpg' %></a> 
              <td><%= link_to book_path(book.user_id) do %>
                <%= book.title %>
              <% end %>
              <td><p><%= book.body %></p>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<!--kaminari用-->
<%= paginate @books %>