<h1>Users#show</h1>
<!-- ユーザーの詳細 -->
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
    <h3>name  <%= @user.name %></h3>
    <h3>introduction  <%= @user.introduction %></h3>
</div>

<!-- 新規投稿作成 -->
<h1>New book</h1>
<% if flash[:alert] %>
  <div>
    <%= @book.errors.count %> errors prohibited this obj from being saved:
  </div>
  <% flash.each do |message_type, message| %>
    <div><%= sanitize alert, tags: %w(br) %></div>
  <% end %>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<!-- ユーザーの投稿一覧 -->
<h1>Book detail</h1>
<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag 'no_image.jpg' %>
  <% end %>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p><%= book.title %></p>
  <p><%= book.body %></p>
  <%= link_to "Edit", edit_book_path(book) %>
  <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?"  %>
</div>
<% end %>

<!--kaminari用-->
<%= paginate @books %>